{
  "name": "typescript-express-jest",
  "version": "1.0.0",
  "description": "A node boilerplate including TypeScript, Express, Jest and ESLint.",
  "author": "Cau√£ Pinheiro",
  "main": "src/index.ts",
  "license": "MIT",
  "scripts": {
    "prect": "jest -o --runInBand",
    "ct": "git-cz",
    "dev": "cross-env NODE_ENV=dev ts-node-dev --ignore-watch node_modules src/server.ts",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:coverage": "cross-env NODE_ENV=test jest --runInBand --coverage",
    "test:debug": "cross-env NODE_ENV=test jest --runInBand -b --detectOpenHandles"
  },
  "dependencies": {
    "cross-env": "^7.0.2",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.4",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "commitizen": "^4.0.3",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "^7.3.1",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.18.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "open": "^7.0.4",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.9.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "cross-env NODE_ENV=test jest -o --runInBand",
      "pre-push": "cross-env NODE_ENV=test jest --runInBand",
      "post-receive": "node scripts/openCoverage.js"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/"
    },
    "testRegex": "/tests/.*\\.(test|spec).(ts|tsx|js)$"
  }
}
